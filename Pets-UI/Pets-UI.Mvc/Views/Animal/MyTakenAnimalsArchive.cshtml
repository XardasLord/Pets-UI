@model IList<Pets_UI.Mvc.Models.AnimalToCare>

@{
    ViewBag.Title = "My taken animals to care (archive)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My taken animals to care (archive)</h2>

@ViewBag.Message

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Animal.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DateFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DateTo)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTo)
                </td>
            </tr>
        }
    }

</table>
